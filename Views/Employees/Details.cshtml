@model EZ_Task.ViewModels.EmployeeDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

 

<div>
    <h4>Employee Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Fullname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Fullname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Gender)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Gender)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Employee.Birthdate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.Birthdate)
        </dd>
    </dl>
    <h4>Vacations Balancing</h4>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Type
                </th>
                <th>
                    Allowance
                </th>
                <th>
                    Used
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Vacations)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Allowance)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model.Employee.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
